@model IEnumerable<AD_DB_Project.Models.Test>

@{
    ViewData["Title"] = "Tests";
}

<h1 class="text-center">Tests</h1>

<p class="text-right">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNumNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNumNavigation.AirportCode)
            </td>
            <td class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.FaaNum" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.FaaNum" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.FaaNum" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
