@model AD_DB_Project.Models.Airport

@{
    ViewData["Title"] = "Create Airport";
}

<h1 class="text-center">Create Airport</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label"></label>
                <input asp-for="AirportCode" class="form-control" />
                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportName" class="control-label"></label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportParish" class="control-label"></label>
                <input asp-for="AirportParish" class="form-control" />
                <span asp-validation-for="AirportParish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportCity" class="control-label"></label>
                <input asp-for="AirportCity" class="form-control" />
                <span asp-validation-for="AirportCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
