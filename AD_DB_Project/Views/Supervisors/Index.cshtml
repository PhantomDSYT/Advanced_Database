@model IEnumerable<AD_DB_Project.Models.Supervisor>

@{
    ViewData["Title"] = "Supervisors";
}

<h1 class="text-center">Supervisors</h1>

<p class="text-right">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrnNavigation.Trn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrnNavigation.Trn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id=item.TrnNavigation.Trn, date=item.Start, emp=item.Employee}, new {@class="btn btn-primary"}) 
                @Html.ActionLink("Details", "Details", new { id=item.TrnNavigation.Trn, date=item.Start, emp=item.Employee}, new {@class="btn btn-info"}) 
                @Html.ActionLink("Delete", "Delete", new { id=item.TrnNavigation.Trn, date=item.Start, emp=item.Employee}, new {@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
